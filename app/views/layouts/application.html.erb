<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja"
xmlns:og="http://ogp.me/ns#" xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
<title>spothon vote</title>
<%= stylesheet_link_tag 'application' %>
<%= javascript_include_tag 'application' %>
<%= csrf_meta_tag %>

<% host = `hostname`.chop %>
<% url  = host == 'stark-fog-3967' ? 'http://stark-fog-3967.com' : 'http://localhost:3000' %>

<meta property="og:type" content="website" />
<meta property="og:title" content="spothon vote" />
<meta property="og:url" content="<%= url %>/votes" />
<meta property="og:image" content="<%= url %>/assets/favicon.png" />
<meta property="fb:app_id" content="<%= Facebook::APP_ID %>" />
<meta property="og:description" content="spothon vote" />
<meta name="author" content="http://spothon.com" />
<link rel="canonical" href="<%= url %>/votes" />
<link rel="shortcut icon" href="<%= url %>/assets/favicon.png" />
</head>
<body>

<%= yield %>

<div id="fb-root"></div>
<script src="http://connect.facebook.net/ja_JP/all.js"></script>
<script>
  FB.init({
    appId  : '<%= Facebook::APP_ID %>',
    status : true,
    cookie : true,
    xfbml  : true
  });
console.log('<%= url %>');  
  <% if @facebook_cookies.nil? %>
  function login(){
    FB.login(function(response) {
      if (response.session) {
        location.href="<%= url %>/votes";
      } else {
        
      }
    }, {perms:'read_friendlists,publish_stream'});
  }
  login();
  <% else %>
  function feed(){
   FB.ui(
       {
         method: 'feed',
         name: 'spothon vote',
         link: 'http://apps.facebook.com/spothon_vote/',
         picture: '<%= url %>/assets/favicon.png',
         message: 'hogehoge',
         description: 'あなたの友達でスポーツ王は誰だ！',
         actions: {'name':'powered by spothon Inc', 'link':'http://spothon.com'}
       });
  }
  <% end %>
</script>
</body>
</html>
